{
	"files.exclude": {
		"src/__pycache__/": true,
		"src/prefs.json": true,
		"venv/": true,
		".pytest_cache/": true
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	}
}